{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$ref": "#/definitions/MinecraftConfig",
  "definitions": {
    "MinecraftConfig": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "$schema": {
          "type": "string",
          "title": "Schema",
          "description": "Pointer to the schema against which this document should be validated."
        },
        "name": {
          "type": "string"
        },
        "mods": {
          "type": "array",
          "title": "Mods",
          "items": {
            "$ref": "#/definitions/Mod"
          }
        },
        "git": {
          "$ref": "#/definitions/Git"
        },
        "publishing": {
          "type": "object",
          "additionalProperties": false,
          "patternProperties": {
            "^.*": { "$ref": "#/definitions/Repository"}
          },
          "title": "Publishing"
        }
      },
      "required": [
      ],
      "title": "MinecraftConfig"
    },
    "Mod": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "slug": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "artifacts": {
          "type": "array",
          "title": "Artifacts",
          "items": {
            "$ref": "#/definitions/ModArtifact"
          }
        }
      },
      "required": [
        "name"
      ],
      "title": "Mod"
    },
    "ModArtifact": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "downloadUrl": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "mavenDependency": {
          "type": "string"
        },
        "minecraftVersion": {
          "type": "string",
          "enum": [
            "1.12",
            "1.13",
            "1.14",
            "1.15.2"
          ]
        }
      },
      "required": [
        "version"
      ],
      "title": "Mod Artifact"
    },
    "Repository": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "maven",
            "scp",
            "git"
          ]
        },
        "url": {
          "type": "string"
        },
        "host": {
          "type": "string"
        },
        "path": {
          "type": "string"
        },
        "port": {
          "type": "integer"
        },
        "credentials": {
          "$ref": "#/definitions/Credentials"
        }
      },
      "if": {
        "properties": { "type": { "const": "scp" } }
      },
      "then": {
        "required": [
          "host","credentials","path"
        ]
      },
      "required": [
        "type"
      ],
      "title": "Repository"
    },
    "Credentials": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "url": {
          "type": "string"
        },
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "identityFile": {
          "type": "string"
        },
        "passphrase": {
          "type": "string"
        }
      },
      "required": [
      ],
      "title": "Credentials"
    },

    "Git": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "dir": {
          "type": "string"
        },
        "repoUri": {
          "type": "string"
        }
      },
      "required": [
        "dir",
        "repoUri"
      ],
      "title": "Git"
    }
  }
}